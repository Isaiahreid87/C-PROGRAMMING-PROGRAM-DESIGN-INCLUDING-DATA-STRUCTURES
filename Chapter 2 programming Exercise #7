#include <iostream>

using namespace std;

int main()
{
    float n;
    int roundNumber;
    
    cout <<" What number do you you want rounded? ";
    cin >> n;
    
    roundNumber = n + .5;
    
    cout <<"This is your rounded number: " << roundNumber;
    
    return 0;
}
