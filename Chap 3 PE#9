/*
 Write a program that accepts as input the mass, in grams, and density, in
grams per cubic centimeters, and outputs the volume of the object using the
formula: volume = mass / density. Format your output to two decimal places.
 */
 
#include <iostream>
#include <iomanip>

using namespace std;

int main ()
{


    double density, mass, volume;

    cout << fixed << showpoint << setprecision(2);

    cout << "Enter you mass: " <<endl;
    cin >> mass;
    cout << "Enter your density: " <<endl;
    cin >> density;

    volume = mass / density;

    cout << "Your volume is " << volume << " gram per cubic centimeter." << endl;

    return 0;


}
